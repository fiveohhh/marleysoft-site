---
const currentPath = Astro.url.pathname;
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="flex items-center">
        <img src="/images/logo.svg" alt="Marleysoft" class="h-12 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex space-x-8">
        <a
          href="/"
          class:list={[
            "hover:text-brand-copper transition-colors",
            currentPath === "/" ? "text-brand-copper font-medium" : "text-gray-700"
          ]}
        >
          Home
        </a>
        <a
          href="/services"
          class:list={[
            "hover:text-brand-copper transition-colors",
            currentPath === "/services" ? "text-brand-copper font-medium" : "text-gray-700"
          ]}
        >
          Services
        </a>
        <a
          href="/about"
          class:list={[
            "hover:text-brand-copper transition-colors",
            currentPath === "/about" ? "text-brand-copper font-medium" : "text-gray-700"
          ]}
        >
          About
        </a>
        <a
          href="/contact"
          class:list={[
            "hover:text-brand-copper transition-colors",
            currentPath === "/contact" ? "text-brand-copper font-medium" : "text-gray-700"
          ]}
        >
          Contact
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-gray-700 hover:text-brand-copper hover:bg-gray-100 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a
          href="/"
          class:list={[
            "py-2 px-3 rounded-md hover:bg-gray-100 transition-colors",
            currentPath === "/" ? "text-brand-copper font-medium bg-brand-copper/5" : "text-gray-700"
          ]}
        >
          Home
        </a>
        <a
          href="/services"
          class:list={[
            "py-2 px-3 rounded-md hover:bg-gray-100 transition-colors",
            currentPath === "/services" ? "text-brand-copper font-medium bg-brand-copper/5" : "text-gray-700"
          ]}
        >
          Services
        </a>
        <a
          href="/about"
          class:list={[
            "py-2 px-3 rounded-md hover:bg-gray-100 transition-colors",
            currentPath === "/about" ? "text-brand-copper font-medium bg-brand-copper/5" : "text-gray-700"
          ]}
        >
          About
        </a>
        <a
          href="/contact"
          class:list={[
            "py-2 px-3 rounded-md hover:bg-gray-100 transition-colors",
            currentPath === "/contact" ? "text-brand-copper font-medium bg-brand-copper/5" : "text-gray-700"
          ]}
        >
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
